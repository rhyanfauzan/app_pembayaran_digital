<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#EFE9E9"
    android:orientation="vertical"
    tools:context=".activity.LainLain">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_header"
            android:orientation="horizontal">



            <ImageButton
                android:id="@+id/bb_menulainnya"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:padding="15dp"
                app:tint="#fff"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_back"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="4dp"
                        android:layout_marginBottom="10dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="3dp"
                                        android:layout_height="30dp"
                                        android:background="@color/colorPrimary"
                                        android:layout_marginRight="5dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Prabayar"
                                        android:textSize="20dp"
                                        android:fontFamily="@font/proxy_bold"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                        android:textColor="@color/grey_60"
                                        android:textStyle="bold" />


                                </LinearLayout>

                            </LinearLayout>

                            <com.google.android.flexbox.FlexboxLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:flexWrap="nowrap"
                                app:justifyContent="space_between">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/ewallet"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">


                                            <RelativeLayout
                                                android:layout_width="50dp"
                                                android:layout_height="50dp">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/dompet"
                                                    />
                                            </RelativeLayout>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:fontFamily="@font/proxy_bold"
                                                android:text="E-Wallet"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/blue_grey_900" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="0.1dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/colorPrimary" />

                                        <LinearLayout
                                            android:id="@+id/vouchergame"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="50dp"
                                                android:layout_height="50dp">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/voucher_game"
                                                    />
                                            </RelativeLayout>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginTop="10dp"
                                                android:gravity="center"
                                                android:fontFamily="@font/proxy_bold"
                                                android:text="Voc Game"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/blue_grey_900" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="0.1dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/colorPrimary" />

                                        <LinearLayout
                                            android:id="@+id/vouchertv"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="50dp"
                                                android:layout_height="50dp">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/televisi"
                                                    />
                                            </RelativeLayout>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:fontFamily="@font/proxy_bold"
                                                android:text="Voucher TV"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/blue_grey_900" />

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </com.google.android.flexbox.FlexboxLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/colorPrimary" />

                            <com.google.android.flexbox.FlexboxLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:flexWrap="nowrap"
                                app:justifyContent="space_between">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/voucherinternet"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="50dp"
                                                android:layout_height="50dp">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/voucher"
                                                    />
                                            </RelativeLayout>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:fontFamily="@font/proxy_bold"
                                                android:text="Voucher Axis"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/blue_grey_900" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="0.1dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/colorPrimary" />

                                        <LinearLayout
                                            android:id="@+id/pakettelkomsel"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="50dp"
                                                android:layout_height="50dp">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/paket_telkomsel"
                                                    />
                                            </RelativeLayout>

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:gravity="center"
                                                android:fontFamily="@font/proxy_bold"
                                                android:text="Paket Telkomsel"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/blue_grey_900" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="0.1dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/colorPrimary" />

                                        <LinearLayout
                                            android:id="@+id/lainnya"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="50dp"
                                                android:layout_height="50dp">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/toll"
                                                    />
                                            </RelativeLayout>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:fontFamily="@font/proxy_bold"
                                                android:text="E-Toll"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/blue_grey_900" />

                                        </LinearLayout>


                                    </LinearLayout>

                                </LinearLayout>

                            </com.google.android.flexbox.FlexboxLayout>



                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_width="3dp"
                                        android:layout_height="30dp"
                                        android:background="@color/colorPrimary"
                                        android:layout_marginRight="5dp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pascabayar"
                                        android:textSize="20dp"
                                        android:fontFamily="@font/proxy_bold"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                        android:textColor="@color/grey_60"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                            <com.google.android.flexbox.FlexboxLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                app:flexWrap="nowrap"
                                app:justifyContent="space_between">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_horizontal"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/pln"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="50dp"
                                                android:layout_height="50dp">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    app:tint="#0091EA"
                                                    android:src="@drawable/gas"
                                                    />
                                            </RelativeLayout>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:fontFamily="@font/proxy_bold"
                                                android:text="Gas Negara"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/blue_grey_900" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="0.1dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="5dp"
                                            android:background="@color/colorPrimary" />
                                        <LinearLayout
                                            android:id="@+id/leasing"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="50dp"
                                                android:layout_height="50dp">

                                                <ImageView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    app:tint="#0091EA"
                                                    android:src="@drawable/multifinance"
                                                    />
                                            </RelativeLayout>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:fontFamily="@font/proxy_bold"
                                                android:text="Multifinance"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                                android:textColor="@color/blue_grey_900" />

                                        </LinearLayout>



                                    </LinearLayout>

                                </LinearLayout>

                            </com.google.android.flexbox.FlexboxLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/colorPrimary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/televisi"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/televisi"
                                            />
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/proxy_bold"
                                        android:text="TV Pascabayar"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                        android:textColor="@color/blue_grey_900" />

                                </LinearLayout>

                                <View
                                    android:layout_width="0.1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5dp"
                                    android:background="@color/colorPrimary" />

                                <LinearLayout
                                    android:id="@+id/grabdriver"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="50dp"
                                        android:layout_height="50dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:tint="#0091EA"
                                            android:src="@drawable/grab"
                                            />
                                    </RelativeLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/proxy_bold"
                                        android:text="Grab Driver"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                                        android:textColor="@color/blue_grey_900" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </ScrollView>
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>